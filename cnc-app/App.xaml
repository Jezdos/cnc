<Application x:Class="APP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:syntax="http://schemas.lepo.co/wpfui/2022/xaml/syntax"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             DispatcherUnhandledException="OnDispatcherUnhandledException"
             Exit="OnExit"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  HandyControl  -->
                <ResourceDictionary Source="pack://application:,,,/common-ui;component/Themes/SkinDefault.xaml" />
                <ResourceDictionary Source="pack://application:,,,/common-ui;component/Themes/Theme.xaml" />

                <!--  MaterialDesignInXamlToolkit  -->
                <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="{StaticResource AppThemeSecondaryColor}" SecondaryColor="{StaticResource AppThemeSecondaryColor}" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />

                <!--  WPF-UI  -->
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>